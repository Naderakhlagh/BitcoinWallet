<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="4dp"
    card_view:cardCornerRadius="12dp">

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_back"
        android:clickable="true"
        android:padding="10dp">

        <ImageView
            android:id="@+id/ivIcon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="16dp" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/ivIcon"
            android:layout_toRightOf="@id/ivIcon"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="Solitaire\nkfjewnfenrwfkwre\nweqnfowecdcewfwerkfmwefeq efewqf"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvDescr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTitle"
            android:layout_toRightOf="@id/ivIcon"
            android:ellipsize="end"
            android:maxLines="10"
            android:text="Classic Single Player Card Games Free App\nkjwefhhwehf\nweijfwenf\nlwejfewjnf\nwjefnjwenqf"
            android:textColor="#a5a5a5"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_install"
            android:layout_width="100dp"
            android:layout_height="32dp"
            android:layout_below="@id/tvDescr"
            android:layout_marginLeft="8dp"
            android:layout_alignParentRight="true"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:background="@drawable/btn"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="2dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="Install"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvSponsored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Sponsored"
            android:textColor="#c6c6c6"
            android:textSize="8sp" />

        <FrameLayout
            android:id="@+id/flContainerInteraction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tvDescr"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="4dp"
            android:visibility="gone" />

    </RelativeLayout>

</android.support.v7.widget.CardView>